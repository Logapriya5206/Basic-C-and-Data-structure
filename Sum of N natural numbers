#include <stdio.h>
int main() {
    int n, sum = 0;
    printf("Enter a positive integer: ");
    scanf("%d", &n);
    for (int i = 1; i <= n; i++) {
        sum += i;
    }
    printf("Sum using loop: %d\n", sum);
    int formula_sum = n * (n + 1) / 2;
    printf("Sum using formula: %d\n", formula_sum);
    return 0;
}
